<!DOCTYPE html>
@{
    ViewBag.TName = "Index";
}

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <script type="text/javascript" charset="utf-8" src="~/Content/js/DictionaryHelper.js"></script>

    @* ReSharper disable once NotAllPathsReturnValue *@


    @section Jsprepare{

        <script type="text/javascript">
            @Html.Raw(ViewBag.RuteUrl)
         @Html.Raw(ViewBag.toolbar)

            var CurrentList;
            jQuery(document).ready(function () {
                AutoWH("#body", 40, 42);//自适应宽度
                DataGridSet();
                PersonnelFile_Units();
                CurrentList=  new Array();//当前选择的
            })
            function DataGridSet() {
                $('#dg').datagrid({
                    url: BaseUrl + 'Search',
                    columns: [[
                        { field: 'ck', checkbox: true },
           { field: 'TransmittingMan', title: '转递人', width: 100, sortable: true },
              { field: 'Series', title: '字', width: 100, sortable: true },
              { field: 'Nos', title: '号', width: 100, sortable: true },
              { field: 'OriginalCount', title: '正本（卷）', width: 100, sortable: true },
              { field: 'DuplicateCount', title: '副本（卷）', width: 100, sortable: true },
              { field: 'MaterialCount', title: '材料（份）', width: 100, sortable: true },
              { field: 'CreateMan', title: '创建人', width: 100, sortable: true },
              { field: 'StatesName', title: '状态', width: 100, sortable: true },
              { field: 'TransmittingTime', title: '转递时间', width: 100, sortable: true }
                    ]],
                    iconCls: 'icon-save',
                    title: '转入记录',
                    nowrap: true,
                    fit: true,
                    fitColumns: true,
                    singleSelect: true,
                    striped: true,
                    collapsible: true,
                    pageSize: 20,
                    pagination: true,
                    rownumbers: true,
                    sortName: 'CreateTime',
                    sortOrder: 'desc',
                    toolbar: toolbars
                });
            }
            //easyUI 弹出添加的对话框
            function AddInfo() {
                //弹出层
                // $("#DivEditor").dialog('open').dialog('setTitle', '添加信息');
                $('#DivEditor').dialog({
                    title: '转递单登记',
                    //width: 400,
                    //height: 200,
                    closed: false,
                    cache: false,
                    // href: 'get_content.php',
                    modal: true, top: 50,
                    onClose: function () {
                        //解决弹出窗口关闭后，验证消息还显示在最上面

                    }
                });
                $('#TransmittingTime').datetimebox('setValue', '9999');
                $(".validatebox-tip").remove();//清除验证样式
            }


            //绑定修改显示详细信息的方法
            function EditInfo() {

                var rows = $("#dg").datagrid('getSelected');
                //首先取出来值判断只能选择一个
                if (rows == null) {
                    $.messager.alert("友情提示", "请选择", "error");
                    return;
                }
                $("#DivEditor").dialog('open').dialog('setTitle', '修改-' + rows.Series + "字" + rows.Nos + "号").window('resize', { top: 50 });
                $(".validatebox-tip").remove();//清除验证样式
                var ID = rows.Id;  //获取到了用选择的ID
                $.ajax({
                    url: BaseUrl + 'GetInfo',
                    type: 'POST',
                    data: { ID: ID },
                    cache: false,
                    error: function () { alert('Error $.ajax'); },
                    success: function (data) {
                        //var result = eval('(' + data + ')');
                        DataBaseFunction.BindForm("ff", data);
                        $('#TransmittingTime').datetimebox('setValue', data.TransmittingTime);
                    }
                });

            }

            //实现的编辑，包括增查改
            function SaveInfo() {

                //判断的信息是否通过验证
                var validate = $("#ff").form('validate');
                if (validate == false) {
                    return false;
                }
                //获取需要传递的参数传递给前台
                var data = DataBaseFunction.GetFormData("ff")
                //发送异步请求到后台保存数据
                $.post(BaseUrl + 'EditInfo', data, function (data) {
                    alerts(data.Msg, 2);
                    if (data.Code > 0) {
                        $('#DivEditor').dialog('close');
                        $(".validatebox-tip").remove();
                        $("#dg").datagrid("reload");

                    }
                });

            }

            //搜索
            function SearchGo() {
                DataBaseFunction.Search("fSearh", "dg");
                $("#Div_Searh").dialog('close');
            }
            //搜索
            function Search() {
                // $("#fSearh").form("clear");
                $("#Div_Searh").dialog('open').dialog('setTitle', '搜索').window('resize', { top: 100, left: 100 });
            }
            //删除
            function Del() {
                DataBaseFunction.deleteInfo("dg", "Id", "TransmittingMan");
            }

            function PersonnelFile_Units() {
                $('#tblist').datagrid({
                    url: BaseUrl + 'PersonnelFile_Units',
                    columns: [[
                          { field: 'ck', checkbox: true },
                { field: 'RealName', title: '姓名', width: 100, sortable: true },
              //{ field: 'Category', title: '类别', width: 100, sortable: true },
              { field: 'Units', title: '单位', width: 100, sortable: true },
              { field: 'Duties', title: '职务', width: 100, sortable: true },
              { field: 'Summary', title: '摘要', width: 100, sortable: true }
                    ]],
                    iconCls: 'icon-save',
                    title: '可用的档案',
                    nowrap: true,
                    fitColumns: true,
                    singleSelect: true,
                    striped: true,
                    collapsible: true,
                    width: 620,
                    height: 400,
                    pageSize: 10,
                    pagination: true,
                    rownumbers: true,
                    sortName: 'CreateTime',
                    sortOrder: 'desc',
                    toolbar: [{
                        id: 'btnadd',
                        text: '选择',
                        iconCls: 'icon-add',
                        handler: function () {
                            addItem();
                        }
                    }]
                });
            }
            function selectItem()
            {
                var rows = $("#tblist").datagrid('getSelections');
                
                $.each(rows, function (j, o) {
                    var ishave = false;
                    if (CurrentList.length > 0) {
                       
                        $.each(CurrentList, function (k, m) {
                            if (m.Id == o.Id) {
                                ishave = true;
                                return false;
                            }
                        });
                    }
                    if (!ishave) {
                        CurrentList.push(rows);
                    }
                });


            }
        </script>
    }

</head>
<body style="overflow-y: hidden">

    <div id="body">
        <table id="dg"></table>

    </div>
    <!------------------------搜索弹出层---------------------------------->
    <div id="Div_Searh" class="easyui-dialog" style="width: 380px; padding: 10px 20px;"
        closed="true" resizable="true" modal="true" buttons="#dlg-buttons">
        <form id="fSearh">

            <table class="stripes" style="table-layout: fixed; margin: 0 auto; width: 320px;" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td style="width: 60px;">
                        <label>转递人：</label></td>
                    <td>
                        <input type="text" class="textbox" name="TransmittingMan_like" style="width: 200px;" />
                    </td>

                </tr>
                <tr>
                    <td>
                        <label>字：</label></td>
                    <td>
                        <input type="text" class="textbox" name="Series_like" style="width: 200px;" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>号：</label></td>
                    <td>
                        <input type="text" class="textbox" name="Nos_like" style="width: 200px;" />
                    </td>
                </tr>
            </table>

        </form>
        <div style="text-align: center; width: 100%; margin: 5px 0px; display: block;">
            <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-undo" style="float: left;" onclick=" DataBaseFunction.ClearForm('fSearh');">清除</a>
            <a href="javascript:void(0)" class="easyui-linkbutton" style="float: right;" iconcls="icon-search" onclick="SearchGo();">搜索</a>
            <a href="javascript:void(0)" class="easyui-linkbutton" style="float: right;" iconcls="icon-cancel" onclick="$('#Div_Searh').dialog('close')">关闭</a>
        </div>
    </div>
    <!------------------------弹出信息的弹出层---------------------------------->
    <div id="DivEditor" class="easyui-dialog" style="width: 700px;" data-options="closed:true,resizable:true,modal:true"
        buttons="#dlg-buttons">
        <div id="Div_form" class="easyui-panel" style="padding: 10px 20px; overflow-x: hidden;" data-options=" height:700,width:680,border:false">

              <table id="tblist"></table>
            <form id="ff" method="post" enctype="multipart/form-data">
                <input type="hidden" name="Id" />
                <input type="hidden" name="FistName" />
                <input type="hidden" name="NumberS" />
                <input type="hidden" name="CreateManId" />
                <input type="hidden" name="CreateMan" />
                <input type="hidden" name="States" />
                <input type="hidden" name="CreateTime" />
                <input type="hidden" name="isDeleted" />
                <table class="stripes" style="table-layout: fixed;" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td style="width: 120px;">
                            <label>转递人：</label></td>
                        <td style="width:520px;">
                            <input class="easyui-validatebox textbox" type="text" name="TransmittingMan" /></td>
                    </tr>
                    <tr>
                        <td>
                            <label>字：</label></td>
                        <td>
                            <input class="easyui-validatebox textbox" type="text" name="Series" /></td>
                    </tr>
                    <tr>
                        <td>
                            <label>号：</label></td>
                        <td>
                            <input class="easyui-validatebox textbox" type="text" name="Nos" /></td>
                    </tr>
                    <tr>
                        <td>
                            <label>正本（卷）：</label></td>
                        <td>
                            <input class="easyui-validatebox textbox" type="text" name="OriginalCount" /></td>
                    </tr>
                    <tr>
                        <td>
                            <label>副本（卷）：</label></td>
                        <td>
                            <input class="easyui-validatebox textbox" type="text" name="DuplicateCount" /></td>
                    </tr>
                    <tr>
                        <td>
                            <label>材料（份）：</label></td>
                        <td>
                            <input class="easyui-validatebox textbox" type="text" name="MaterialCount" /></td>
                    </tr>
                    <tr>
                        <td>
                            <label>转递时间：</label></td>
                        <td>
                            <input class="easyui-datetimebox" name="TransmittingTime" id="TransmittingTime" data-options="required:true,showSeconds:false" style="width: 200px"></td>
                    </tr>
                </table>
            </form>
        </div>

        <div style="text-align: center; width: 100%; margin-bottom: 5px;">
            <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-ok" onclick="SaveInfo();">确定</a>
            <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" onclick="$('#DivEditor').dialog('close')">关闭</a>
        </div>
    </div>
</body>
</html>
